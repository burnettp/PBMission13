@{
}

@model IEnumerable<Team>

@*Filter by team*@
<div>
    @*Home button to view all bowlers*@
    <a asp-controller="Home" asp-action="Index" asp-route-teamName="" class="btn btn-block btn-outline-dark">Home</a>

    @foreach (var t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamName="@t.TeamName" asp-route-teamID="@t.TeamID"
           class="btn btn-block @(t.TeamName == ViewBag.SelectedTeam ? "btn-info" : "btn-outline-dark")">@t.TeamName</a>
    }
</div>
